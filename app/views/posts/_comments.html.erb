 <% comments.each do |comment| %>
  <table>
   <tr>
     <td>
        <%= link_to user_path(comment.user.id) do%> <%= attachment_image_tag comment.user, :image, format: 'jpeg',  size: "20x20" , class:"mt-3 rounded-circle"; %><% end %>
       <i class="far fa-comment-dots"></i> <%= comment.comment %>
     </td>
   </tr>
 </table>
<% end %>

