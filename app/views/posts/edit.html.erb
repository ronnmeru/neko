<div class="container  px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 col-mx-3">
<h1>投稿編集画面</h1>
<%= form_with model:@post, local:true do |f| %>
<% if @post.errors.any? %>
  <div class="alert alert-warning">
  <h2><%= @post.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

      <p>Image</p>
      <%= f.attachment_field :image %>
      <p>Title</p>
      <%= f.text_field :title, class: "form-control" %>
      <p>Introduction</p>
      <%= f.text_area :content, class: "form-control" %>
      <p>tag</p>
       <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control" %>

 <div> <%= f.submit 'Update Post',class:"btn btn-success" %></div>
<% end %>
 <%= link_to "Show", post_path(@post.id) %>
 <%= link_to "Back",  posts_path %>
     </div>
  </div>
</div>

