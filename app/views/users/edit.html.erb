<div class="container  px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 col-mx-3">
<h1>User info</h1>
<%= form_with model:@user, local:true do |f| %>
<% if @user.errors.any? %>
  <div class="alert alert-warning">
  <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <p>Name</p>
  <%= f.text_field :name %>
  <p>Image</p>
   <%= f.attachment_field :image %>
  <p>Introduction</p>
  <%= f.text_area :introduction %>
<div class="visual">
<%= f.submit 'Update User',class:"btn btn-success"%>
</div>
<% end %>
<div class="button">
<%= link_to '退会する',  unsubscribe_path, class: 'btn btn-secondary' %>
</div>
    </div>
  </div>
</div>
