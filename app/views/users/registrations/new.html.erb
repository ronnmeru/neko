<div class="container">
  <div class="mt-4 mb-4 bg-light d-inline-block">
    <h4 class="px-2 pt-2">新規会員登録</h4>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
    <div class="">
      <div class="field form-group col-xs-9">
        <%= f.label :email, class: "col-sm-4 control-label text-right" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4 form-control-static", placeholder:"sample@example.com"  %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label text-right" %>
        <% if @minimum_password_length %>
        <em><% @minimum_password_length %> </em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static"  %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(確認用)", class: "col-sm-4 control-label text-right" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success offset-sm-4 col-sm-2" %>
  </div>
<% end %>

  <div class="mt-4 mb-4 bg-light d-inline-block">
    <h4 class="px-2 pt-2">既に登録済みの方</h4>
  </div>
  <div class="col">
    <u><%= link_to "こちら", new_user_session_path %></u>からログインしてください。<br />
  </div>
</div>
